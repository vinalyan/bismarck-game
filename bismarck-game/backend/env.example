# Bismarck Game Backend Environment Variables

# Application Environment
APP_ENV=development

# Server Configuration
SERVER_ADDRESS=:8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=bismarck_user
DB_PASSWORD=bismarck_pass
DB_NAME=bismarck_game_dev
DB_SSL_MODE=disable

# Redis Configuration
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Game Configuration
GAME_MAX_PLAYERS=2
GAME_TURN_DURATION=30s
GAME_START_DELAY=10s
GAME_MAX_GAMES=100
GAME_CLEANUP_INTERVAL=5m

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_FILE_PATH=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# WebSocket Configuration
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_PING_PERIOD=54s
WS_PONG_WAIT=60s
WS_MAX_MESSAGE_SIZE=512

# Security
BCRYPT_COST=10
SESSION_CLEANUP_INTERVAL=1h

# Development Settings
DEBUG=true
HOT_RELOAD=false
